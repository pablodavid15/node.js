<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>Titulo: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{date}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="{{_id}}"><button class="btn btn-success mt-3">Editar categoria</button></a>
            <form action="" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-3">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <p class="mt-2">Nenhuma postagem Regristrada!</p>
{{/each}}